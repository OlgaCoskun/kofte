<h2>Войти</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, "Ваша почта" %><br />
    <%= f.email_field :email, autofocus: true, size: "30x20" %>
  </div>

  <div class="field">
    <%= f.label :password, "Пароль" %><br />
    <%= f.password_field :password, autocomplete: "off", size: "30x20" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "Запомнить меня" %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Войти", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
