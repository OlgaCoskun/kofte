<%# Паршал для вывода отдельной фотографии %>
<div class="event-photo buffer-both">

  <% if current_user_can_edit?(photo) %>
    <% image_title += link_to(
        fa_icon('trash'), event_photo_path(photo.event, photo),
        method: :delete, data: {confirm: t('controllers.photos.destroyed')}
    ) %>
  <% end %>

<!--  Картинки в слайдере-->
  <%= link_to image_tag(photo.photo.thumb.url), photo.photo.url, data: {
      toggle: 'lightbox',gallery: 'event-photos', title: "Добавил #{render partial: 'users/user', object: photo.user}"
  } %>

  <%# Показываем не только фотку, но и юзаре, который её добавил %>
  Добавил <%= render partial: 'users/user', object: photo.user %>
</div>