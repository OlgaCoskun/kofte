<%# Универсальный паршиал отображения ошибок валидации любой модели %>
<div class="row">
  <div class="col-md-8">
    <% errors = model.errors %>

    <% if errors.any? %>
      <div class="alert alert-danger">
        <div class="lead buffer-bottom">
          В вашей форме <%= t 'errors', count: errors.count %>
        </div>

        <ul>
          <% errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>
